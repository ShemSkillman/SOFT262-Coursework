<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SOFT262.Manage.ManagePage"
             Title="Manage Cards"
             IconImageSource="baseline_build_black_48dp.png">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This is the Manage page. If there is nothing here, create a revision card!"
                FontSize="Medium"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />

            <ListView ItemsSource="{Binding AllTopics}"
                      x:Name="TopicsListView"
                      VerticalOptions="FillAndExpand"
                      HorizontalOptions="Center">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding TopicName}"
                                  Detail="{Binding CardCount, StringFormat='Revision card count: {0}'}">
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>